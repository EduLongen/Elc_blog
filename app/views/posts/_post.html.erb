
  <div class="card mt-5 mb-5" style="max-width: 1920px;">
    <div class="row g-0">
      <div class="col-md-2">
        <img src="..." class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-4">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.content %></p> <%# change post.content for post.preview later %>
          <p class="card-text"><small class="text-muted">posted by: <%= link_to post.user.name, user_path(post.user) %> - 
            <%= time_tag(post.created_at, "data-local": "time-ago")%> | 
            <%= pluralize(post.views, "view") %></small></p>
        </div>
      </div>
    </div>
  </div>
